  <h2 style="background-color:rgba(199, 231, 244, 0.73); font-family:sans-serif; color: #000000; text-align:center;">Historia Médica Pediatrica</h2>


  <p><b>Antecedentes</b></p>
  <table class="striped bordered">
        <thead>
          <tr>
            <th>Tipo de antecedente</th>       
            <th>Fuma cigarrillos</th> 
            <th>Hipertenso</th>
            <th>Diabético</th>
            <th>Intervenciones quirúrgicas</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= resultado1[0].TipoAntecedente %></td>
            <td><%= resultado1[0].Cigarrillos %></td>
            <td><%= resultado1[0].Hipertenso %></td>
            <td><%= resultado1[0].Diabetico %></td>
            <td><%= resultado1[0].NroIntervenciones %></td>
          </tr>
        </tbody>
    </table>
    <br><br>

    <p><b>Alérgenos</b></p>

    <table class="striped bordered">
      <thead>
        <tr>
          <th>Alérgeno</th>
        </tr>
      </thead>
<% resultado1.forEach(function(res){ %>
        <tbody>
        <tr>
        <td><%= res.Descripcion %></td>
        </tr>

        </tbody>
        <%})%>
    </table>

    <br><br>
    <p><b>Informe</b></p>
    <table class="striped bordered">
        <thead>
          <tr>
            <th>Fecha</th>       
            <th>Presión Arterial</th> 
            <th>Pulso</th>
            <th>Síntoma</th> 
            <th>Diagnóstico</th>
            <th>Enfermedades</th>
            <th>Instrucciones</th>  
            <th>Medicamentos</th> 
          </tr>
        </thead>

<% resultado2.forEach(function(res){ %>
        <tbody>
          <tr>
            <td><%= res.Fecha %></td>
            <td><%= res.PresionArterial %></td>
            <td><%= res.Pulso %></td>
            <td><%= res.Sintoma %></td>
            <td><%= res.Diagnostico %></td>
            <td><%= res.NombreE %></td>
            <td><%= res.Instruccion %></td>
            <td><%= res.NombreM %></td>

          </tr>
        </tbody>
        <%})%>
    </table>

    <br><br>



